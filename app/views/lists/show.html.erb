<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @list.name %>
</p>

<p>
  <strong>Checked:</strong>
  <%= @list.checked %>
</p>

<p>
  <strong>Shared:</strong>
  <%= @list.shared %>
</p>

<h3> ITEMS </h3>
<% @list.items.each do |item| %>
  <%= render partial: 'shared/items/check_button', locals: {item: item, depth: 0} %>
  <% if item.items %>
    <% item.items.each do |subitem|%>
      <%= render partial: 'shared/items/check_button', locals: {item: subitem, depth: 1} %>
    <%end%>
  <%end%>
<%end%>
 
<hr />

<%= link_to 'Edit', edit_list_path(@list) %> |
<%= link_to 'Back', lists_path %>
